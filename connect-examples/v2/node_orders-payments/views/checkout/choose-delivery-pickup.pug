extends ../layout
block append styles
    link(rel='stylesheet', href='../stylesheets/checkout.css')
block append scripts
    script(type="text/javascript" src="../js/choose-delivery-pickup.js")
block content
    h1(class="page-title") Choose Delivery Method
    div(class="tab-content")
        form(id="delivery-pickup-form" action='/checkout/choose-delivery-pickup', method='post')
            include ../includes/pickup-info-input.pug
            input(name='order_id', type='hidden', value=order_info.orderId, style='display: none')
            input(name='location_id', type='hidden', value=order_info.locationId, style='display: none')
        div(class="order-summary")
            include ../includes/order-summary.pug
            button(class="form-button" type="button" onclick="validateAndSubmitDeliveryPickupDetails()") Continue To Payment